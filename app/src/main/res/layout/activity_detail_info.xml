<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/orangeyellow"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    tools:context=".DetailInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profil"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/asep"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.362"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/img_szt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sz"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_about_application"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Soccer Zone Time Application"
                android:textColor="@color/purpleblack"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/img_profil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_szt" />

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Asep Sutrisna Suhada Putra"
                android:textColor="@color/purpleblack"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_profil" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="asutrisna84@gmail.com"
                android:textColor="@color/purpleblack"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nama"/>

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Contact : "
                android:textColor="@color/purpleblack"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_email"/>

            <ImageView
                android:id="@+id/img_instagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/instagram"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact"
                android:layout_marginTop="20dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/img_linkedin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/linkedin"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toStartOf="@+id/img_instagram"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact" />

            <ImageView
                android:id="@+id/img_github"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/github"
                android:layout_margin="20dp"
                app:layout_constraintStart_toEndOf="@+id/img_instagram"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>